{%
  set classes = [
  'media',
  'media--type-' ~ media.bundle()|clean_class,
  not media.isPublished() ? 'media--unpublished',
  view_mode ? 'media--view-mode-' ~ view_mode|clean_class,
]
%}

<article{{ attributes.addClass(classes) }}>
  {{ title_suffix.contextual_links }}

  {% block wrapper_start %}
  <a class="story-link" href="/better-off-red">
    <div class="story--teaser-image-large large-fallback">
      {% endblock %}

      <div>
        {{ content.field_media_soundcloud }}
      </div>
      <div>
        <div class="story-label">{{ elements.created }}</div>
        <h4>{{ content.name }}</h4>
        <div class="field--name-field-teaser">
          {{ content.field_episode_summary }}
        </div>
      </div>
    </div>
  </a>
</article>
